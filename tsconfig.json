{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": "./",
    "rootDir": "./",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "*.d.ts"
  ]
}
